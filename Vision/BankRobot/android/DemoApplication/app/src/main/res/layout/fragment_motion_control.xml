<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nb.robot.demoapplication.fragment.MotionControlFragment">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/intr"
                    android:text="底盘控制"
                    android:layout_weight="1"
                    android:padding="10dip"
                    android:gravity="center"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/motion_lineSpeed"
                    android:hint="线速度"
                    android:padding="10dip"/>
                <EditText
                    android:id="@+id/motion_angularSpeed"
                    android:hint="角速度"
                    android:padding="10dip"/>
                <EditText
                    android:id="@+id/motion_duration"
                    android:hint="运行时长"
                    android:padding="10dip" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/button_motion"
                    android:text="底盘运动控制"
                    android:padding="5dip" />
                <Button
                    android:id="@+id/button_reset"
                    android:text="底盘位置重置"
                    android:padding="5dip"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:text="底盘的X，Y，Th值"
                android:textAlignment="center"
                android:layout_weight="1"
                android:padding="10dip"
                android:gravity="center" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/tv_XYTH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"/>

</LinearLayout>
