<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nb.robot.demoapplication.fragment.DanceFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id = "@+id/tv_dance"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "舞蹈类型："
            />
        <Spinner
            android:id = "@+id/spinner_dance"
            android:layout_width = "wrap_content"
            android:layout_height ="wrap_content" >
        </Spinner >
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id = "@+id/tv_dance_time"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "舞蹈时间："
            />
        <EditText
            android:id="@+id/et_dance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />
        <TextView
            android:id = "@+id/tv_unit"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "ms"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id = "@+id/tv_dance_repeat"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "重复次数："
            />
        <EditText
            android:id="@+id/et_dance_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="控制舞蹈动作" />
        <Button
            android:id="@+id/bt_silent_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="静音" />
        <Button
            android:id="@+id/bt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂停" />

    </LinearLayout>

</LinearLayout>